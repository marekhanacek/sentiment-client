{block content}

<table id="example" class="display">
    <thead>
        <tr>
            <th>User</th>
            <th>Number of comments</th>
            <th>Positive</th>
            <th>Neutral</th>
            <th>Negative</th>
            <th>Positive rating</th>
            <th>Negative rating</th>
        </tr>
    </thead>
    <tbody>
        <tr n:foreach="$users as $user">
            <td>{$user['user']}</td>
            <td>{$user['total_count']}</td>
            <td>{$user['pos_avg']|number:1} %</td>
            <td>{$user['neu_avg']|number:1} %</td>
            <td>{$user['neg_avg']|number:1} %</td>
            <td>{$user['total_rating_positive']}</td>
            <td>{$user['total_rating_negative']}</td>
        </tr>
    </tbody>

</table>

{/block}
